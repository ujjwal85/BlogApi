<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BlogApi</title>
    <style>
              .popup:hover{
            transform: scale(1.2);
        }
        .img{
          width: 100%;
          height: 200px;
        }
    </style>
</head>

<body>
    {{>navbar}}
    <div class="container mt-3">
        <div class="row gy-3">
            {{#each data}}
            <div class="col-md-4">
                <div class="shadow-lg p-3 mb-5 bg-body rounded-3 popup" onclick="sub({{json this}})" data-bs-toggle="modal" data-bs-target="#exampleModal" id="submit" class="card">
                    <h5 class="card-header">Blogs</h5>
                    <div class="card-body">
                      <img class="img" src="{{this.picture}}" alt="">
                        <h5 class="card-title">Title :- <span id="title">{{this.title}}</span> </h5>
                        <a href="/delete/{{this._id}}" class="btn btn-danger me-2"><i class="fa-solid fa-trash-can"></i></button>
                         <a href="/update/{{this._id}}" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Read Blogs</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="modal-body">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
     function sub(data){
        const modal_body=document.getElementById("modal-body")
        const str=`<p ><span class="fw-bold">Title:-</span> ${data.title}</p>
        <p ><span class="fw-bold">Posted By:- </span>${data.posted_by}</p>
        <p ><span class="fw-bold"> Discription:- </span> ${data.discription}</p>`
        modal_body.innerHTML=str
     }

    </script>

<script src="https://kit.fontawesome.com/ff2468692f.js" crossorigin="anonymous"></script>
</body>

</html>